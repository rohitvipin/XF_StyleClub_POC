<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_StyleClub_POC.Views.LoginView"
             Title="{Binding PageTitle}"
             BackgroundImage="login">
  
  <StackLayout VerticalOptions="EndAndExpand" Padding="15,15,15,15"  Spacing="2">
    
    <StackLayout Orientation="Horizontal">
      <Button HorizontalOptions="FillAndExpand" WidthRequest="330" BorderRadius="0" BackgroundColor="#3B5998" BorderWidth="0" Text="Login with Facebbok" TextColor="White"></Button>
    </StackLayout>
    
    <StackLayout Orientation="Horizontal" Spacing="2">

      <Button HorizontalOptions="Fill" WidthRequest="164" BackgroundColor="Black" BorderRadius="0" BorderWidth="0" Text="CREATE ACCOUNT" FontAttributes="Bold" TextColor="White" Command="{Binding RegisterCommand}"></Button>

      <Button  HorizontalOptions="Fill" WidthRequest="164" BackgroundColor="Black" BorderRadius="0" BorderWidth="0" Text="SIGN IN" FontAttributes="Bold" TextColor="White" Command="{Binding SignInCommand}"></Button>

    </StackLayout>
  </StackLayout>

</ContentPage>